@page "{pollId?}"
@model SignalRPollsterSite.Pages.IndexModel
@{
    string? pollId = (string)@RouteData.Values["pollId"];
}
<!doctype html>
<html lang="en">
<head>
    <title>Pollster site</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .striped:nth-child(even) { background: #eef; }

        @@keyframes pulse {
            0% {transform: scale(.75); color: red; }
            90% { transform: scale(1.3); }
            100% { transform: scale(1); }
        }

    </style>
    <script>var pollId = "@pollId";</script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">

        <h1 id="title">No Poll id found!</h1>
        <div id="description"></div>
    </div>
    <p></p>
    <div id="pollDiv" style="width:800px; margin: 0 auto"></div>
    <template>
        <div class="result container striped" style="margin-bottom:2px;">
            <div class="row">
                <div class="col-sm-1 voteButtonContainer">
                    <button class="voteButton btn btn-lg btn-primary">vote</button>
                </div>
                <div class="col-sm-2 choiceVoteCount align-self-center h3 text-center">0</div>
                <div class="col-sm-9 choiceText align-self-center h5"></div>
            </div>
        </div>
    </template>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    @if (!string.IsNullOrEmpty(pollId))
    {
        <script src="js/signalr.js"></script>
        <script src="js/pollster.js"></script>
    }
</body>
</html>