@page "{pollId?}"
@model SignalRPollsterSite.Pages.IndexModel
@{
    string? pollId = (string)@RouteData.Values["pollId"];
}
<!doctype html>
<html lang="en">
<head>
    <title>Pollster site</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .striped:nth-child(even) { background: #eef; }

        @@keyframes pulse {
            0% {transform: scale(.75);  }

            90% {
                transform: scale(1.3);
                color: red;
            }
            100% { transform: scale(1); }
        }

    </style>
    <script>var pollId = "@pollId";</script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1 id="title">No Poll id found!</h1>
        <div id="description"></div>
    </div>
    <p></p>
    <div class="table-responsive">
    <table id="pollTable" class="table table-sm align-middle text-center" >
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Votes</th>
                <th scope="col">Option</th>
            </tr>
        </thead>
        <tbody id="results"></tbody>
        </table>
    </div>
    <template>
        <tr class="result">
            <td class="w-25"><button class="voteButton btn btn-lg btn-primary">vote</button></td>
            <td class="choiceVoteCount" style="font-weight:bold;">0</td>
            <td class="choiceText"></td>
        </tr>
    </template>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    @if (!string.IsNullOrEmpty(pollId))
    {
        <script src="js/signalr.js"></script>
        <script src="js/pollster.js"></script>
    }
</body>
</html>