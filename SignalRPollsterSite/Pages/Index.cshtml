@page "{pollId?}"
@model SignalRPollsterSite.Pages.IndexModel
@{
    string? pollId = (string)@RouteData.Values["pollId"];
}
<!doctype html>
<html lang="en">
<head>
    <title>Pollster site</title>
    <meta charset="utf-8" />
    <style>
        .result {
            text-align: center;
        }
    </style>
    <script>var pollId = "@pollId";</script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">

        @if (string.IsNullOrEmpty(pollId))
        {
            <h1>No Poll id found!</h1>
        }
        else
        {
            <h1 id="title"></h1>
            <div id="description"></div>
            <script src="js/signalr.js"></script>
            <script src="js/pollster.js"></script>
        }
    </div>
    <p></p>
    <div id="pollDiv"></div>
    <template>
        <div class="result container">
            <div class="row">
                <div class="col-sm-9 choiceText"></div>
                <div class="col-sm-1 choiceVoteCount">0</div>
                <div class="col-sm-2 voteButtonContainer">
                    <button class="voteButton btn btn-primary">vote</button>
                </div>
            </div>
        </div>
    </template>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>